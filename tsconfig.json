{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": true,
    "allowJs": true,
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true,
    "baseUrl": "./",
    "strict": false,
    "strictNullChecks": true,
    "paths": {
      "~app/*": [
        "./src/*"
      ],
      "~generated/*": [
        "./generated/*"
      ]
    },
    "skipLibCheck": true
  },
  "exclude": [
    "./node_modules",
    "./dist",
    "./generated/*",
    "./generated/graphql/helpers/*"
  ]
}